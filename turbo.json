{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true,
      "interactive": true,
      "interruptible": true
    },
    "type-check": {
      "persistent": true
    },
    "build": {
      "cache": true,
      "dependsOn": ["^build"]
    }
  }
}
